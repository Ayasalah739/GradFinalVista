<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (darker color behind the shape) -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#80000000" /> <!-- Semi-transparent black shadow -->
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Main shape layer (white background with border) -->
    <item>
        <shape>
            <solid android:color="@color/BgAndOnBtnWhite" />
            <corners android:radius="18dp" />
            <stroke android:width="1dp" android:color="@color/BgAndOnBtnWhite" />
        </shape>
    </item>
</layer-list>
