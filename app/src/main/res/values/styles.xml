<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerItemTitleStyle">
        <item name="android:textSize">24sp</item> <!-- Set the desired size -->
        <item name="android:textColor">@color/drawer</item> <!-- Optional: Change text color -->
    </style>

    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicator</item>
    </style>

    <style name="CustomActiveIndicator">
        <item name="android:color">@color/Blue</item> <!-- Change this to your desired color -->
    </style>

    <style name="TransparentDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>